{%- comment -%}

function to get site attribute

{%- endcomment -%}
{%- case include.attribute -%}
{%- when 'scheme/color' -%}
  {%- if site.color_scheme and site.color_scheme != "nil" -%}
  {%- assign color_scheme = site.color_scheme -%}
  {%- else -%}
  {%- assign color_scheme = "none" -%}
  {%- endif -%}
  {{color_scheme}}
{%- else -%}
{% include error-can-not-case-include.attribute-in-get_site_attribute %}
{%- endcase -%}